<div class="e_bannerB s_banner swiper-container" needjs="true">
    {{#if prop.bannerLists}}
    <ul class="swiper-wrapper">
        {{#each prop.bannerLists}}
        <li class="swiper-slide">
            {{#eq type 1}}
                {{#if href.value}}
                <a href="{{$transferLink href compId}}" target="{{target}}">
                {{/if}}
                <div class="p_img">
                    {{{nLazyImage imgUrl title '{{#eq @index 0}}false{{^}}true{{/eq}}'}}}
                </div>
                {{#if href.value}}
                </a>
                {{/if}}
            {{/eq}}
            {{#eq type 2}}
                <div class="p_video">
                    <div class="p_videoPoster">
                        {{{nLazyImage video.coverImgUrl title 'false'}}}
                    </div>
                    <div class="videoContent">
                    {{{lazyVideo video.url ../prop.settings.videoMouted false}}}
                    </div>
                </div>
            {{/eq}}
            <div class="p_info {{#eq type 2}}p_videoInfo{{/eq}}">
                <div>
                    {{#if title}}
                    <h1 class="text-white p_btitle">{{title}}</h1>
                    {{/if}}
                    {{#if subTitle}}
                    <h6 class="text-white bg-dark p_subtitle">{{subTitle}}</h6>
                    {{/if}}
                    {{#if summary}}
                    <p class="text-white p_summary">{{summary}}</p>
                    {{/if}}
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
    {{#if prop.settings.navigation}}
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    {{/if}}
    {{#if prop.settings.pagination}}
    <div class="swiper-pagination"></div>
    {{/if}}
    {{^}}
    {{{nNoDataPrompt i18n.noData}}}
    {{/if}}
</div>
