{
  "cname": "手机号验证",
  "styleId": "e_mobileCode",
  "styleClass": "",
  "tmpl": "<div class=\"${elemId} ${styleClass} form-group\">\n    {{#if ${showLabel}}}\n    <label class=\"p_label\">\n        {{${label}}}\n        <span class=\"text-danger p_required\">*</span>\n    </label>\n    {{/if}}\n    <div class=\"p_input\">\n        <input type=\"text\" class=\"form-control p_Number\" name=\"${elemId}-Number\" placeholder=\"{{${placeholder1}}}\">\n        <input type=\"text\" class=\"form-control p_Code\" name=\"${elemId}-Code\" placeholder=\"{{${placeholder2}}}\">\n        <button class=\"btn btn-primary btn-sm s_button1 p_sendBtn\">发送短信验证码</button>\n    </div>\n    <div class=\"invalid-feedback\"></div>\n    <input type=\"hidden\" name=\"propJson\" value='{{{propJson}}}'>\n</div>",
  "css": [
    {
      "media": "",
      "cssText": ".e_mobileCode .p_Code{\n    width: 150px;\n    display: inline-block;\n}\n.e_mobileCode .p_Number{\n    margin-bottom: 10px;\n}\n.e_mobileCode .p_sendBtn{\n    height: 35px;\n    padding: 0 15px;\n    margin-left: 5px;\n}"
    },
    {
      "media": "screen and (max-width:768px)",
      "cssText": ""
    },
    {
      "media": "screen and (min-width: 769px)",
      "cssText": ""
    },
    {
      "media": "screen and (max-width: 1024px) and (min-width: 769px)",
      "cssText": ""
    }
  ],
  "prop": {
    "showLabel": true,
    "label": "手机号验证",
    "placeholder1": "请输入手机号码",
    "placeholder2": "短信验证码",
    "codeNeed": true,
    "focus": true
  },
  "i18n": {
    "zh_CN": {}
  },
  "datasource": "prop",
  "type": "form"
}