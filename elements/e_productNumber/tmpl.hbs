<div class="e_productNumber" needjs="true">
    <!-- lable -->
    <div class="p_label">{{i18n.count}}</div>
    <div class="p_box">
        <!-- 减少 -->
        <div class="border rounded-left p_reduce" data-moq="{{prop.moq}}">-</div>
        <!-- input -->
        <input type="text" class="border p_input" value="{{#if prop.moq}} {{prop.moq}} {{^}} 1 {{/if}}">
        <!-- 增加 -->
        <div class="border rounded-right p_increase" data-stock="{{prop.stock}}">+</div>
    </div>
</div>