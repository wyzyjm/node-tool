{
  "cname": "条款条件",
  "styleId": "e_agreement",
  "styleClass": "s_form1",
  "tmpl": "<div class=\"${elemId} ${styleClass} form-group\" needjs=\"true\" required>\n    {{#if ${showLabel}}}\n    <label class=\"p_label\">\n        <span class=\"s_label\">{{${label}}}</span>\n    </label>\n    {{/if}}\n    <div>\n        <div class=\"form-check form-check-inline p_input\">\n            <input class=\"form-check-input s_form-control\" type=\"checkbox\" name=\"${elemId}\" id=\"${elemId}-{{@index}}\" {{#if ${validate}.select.value}}checked{{/if}}>\n            <label class=\"form-check-label s_other\" for=\"${elemId}-{{@index}}\">{{${placeholder}}}</label>\n            <a href=\"javascript:;\" class=\"text-primary p_showAgreement\" data-toggle=\"modal\" data-target=\"#${elemId}-relevantModal\">{{${linkText}}}</a>\n        </div>\n        <div class=\"invalid-feedback\"></div>\n    </div>\n\n    <div class=\"modal fade\" id=\"${elemId}-relevantModal\" tabindex=\"-1\" role=\"dialog\" aria-labelledby=\"modalTitle\" aria-hidden=\"true\">\n        <div class=\"modal-dialog modal-dialog-centered modal-lg\" role=\"document\">\n            <div class=\"modal-content p_modalContent\">\n                <div class=\"modal-header\">\n                    <h6 class=\"modal-title\" id=\"modalTitle\">条款协议</h6>\n                    <button type=\"button\" class=\"close\" data-dismiss=\"modal\" aria-label=\"Close\"><span class=\"text-white\" aria-hidden=\"true\">&times;</span></button>\n                </div>\n                <div class=\"modal-body p_agreeContent\">\n                    {{{${content}}}}                  \n                </div>\n                <div class=\"modal-footer p_agreeBtn\">\n                    <button type=\"button\" class=\"btn btn-primary btn-sm p_confirm\" data-dismiss=\"modal\">阅读并同意</button>\n                </div>\n            </div>\n        </div>\n    </div>\n</div>",
  "css": [
    {
      "media": "",
      "cssText": ".e_agreement .p_showAgreement{\n    margin-left: 10px;\n}\n.e_agreement .p_agreeContent{\n    max-height: 600px;\n    overflow-y: auto;\n    overflow-x: hidden;\n}\n.e_agreement .p_agreeContent img{\n    max-width: 100% !important;\n}\n.e_agreement .p_agreeBtn{\n    text-align: center;\n    display: block;\n}"
    },
    {
      "media": "screen and (max-width:768px)",
      "cssText": ""
    },
    {
      "media": "screen and (min-width: 769px)",
      "cssText": ""
    },
    {
      "media": "screen and (max-width: 1024px) and (min-width: 769px)",
      "cssText": ""
    }
  ],
  "prop": {
    "showLabel": true,
    "label": "条款协议",
    "placeholder": "我已阅读并接受条款及条件",
    "linkText": "查看使用条款",
    "content": "",
    "validate": {
      "select": {
        "value": true
      }
    }
  },
  "i18n": {
    "zh_CN": {}
  },
  "datasource": "prop",
  "type": "form"
}