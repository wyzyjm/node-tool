<div class="e_cardLabel form-group" {{#if prop.validate.required.value}}required{{/if}}>
    {{#if prop.showLabel}}
    <legend class="col-form-label p_label">
        <span class="s_label">{{prop.label}}</span>
    </legend>
    {{/if}}
    <div class="p_input">
        {{#prop.options}}
        <div class="form-check form-check-inline p_labelItem">
            <input class="form-check-input s_form-control" type="checkbox" name="${elemId}" id="${elemId}-{{@index}}" value="{{value}}" {{#if select}}checked{{/if}}>
            <div class="p_card">
                <div class="p_img">
                    {{#each img}}
                        {{#eq @index 0}}
                            {{{nLazyImage imageUrl '' 'true'}}}
                        {{/eq}}
                    {{/each}}
                </div>
                <div class="p_info">
                    <div class="p_title">
                        {{label}}
                    </div>
                    <div class="p_value">
                        {{value}}
                    </div>
                </div>
            </div>
        </div>
        {{/prop.options}}
    </div>
    <div class="invalid-feedback"></div>
</div>