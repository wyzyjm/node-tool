    <!-- 对比按钮（mo） -->
    {{#prop.list}}
    <div class="badge-primary p-1 p_contrast">
        {{#eq @index 0}}
        <span class="p_contrast_text">{{name}}</span>
        <span class="p_contrast_num">0</span>
        {{/eq}}
    </div>
    {{/prop.list}}
    <!-- 蒙层 -->
    <div class="p_obscuration show">
        <!-- 对比列表 -->
        <div class="bg-white p_contrast_list">
