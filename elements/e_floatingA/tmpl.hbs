            <div class="alert alert-danger p_danger hide">
                <span class="j_column"></span>{{i18n.tip}}
            </div>
            <!-- 切换tab -->
            <div class="text-primary p_title">
                <div class="j_tab p_tab">
                {{#prop.list}}
                    <span class="px-3 py-2 p_title_compareTheBar {{#eq @index 0}} active{{/eq}} ">{{name}}</span>
                {{/prop.list}}
                </div>
                <select class="mx-3 my-2 form-control j_mo_tab p_form-control">
                {{#prop.list}}
                    <option value="{{@index}}">{{name}}</option>
                {{/prop.list}}
                </select>
                <span class="px-3 py-2 p_title_hidden">{{i18n.hidden}}</span>
            </div>
            <!-- 切换列表 -->
            <ul class="j_switch_list">
                {{#prop.list}}
                <li class="hidden {{#eq @index 0}} showList{{/eq}}">
                    <ul class="border border-primary px-sm-2 py-md-2 p_data_list">
                        
                        <li class="text-primary py-sm-3 p_last_item">
                            <button class="btn btn-primary p_contrast_btn">{{name}}</button>
                            <p class="py-2 p_contrast_clear">清空全部内容</p>
                        </li>
